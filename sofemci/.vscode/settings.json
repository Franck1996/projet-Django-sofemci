{
    "files.associations": {
        "**/templates/**/*.html": "django-html",
        "**/*.html": "django-html"
    },
    
    "[django-html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnType": true
    },
    
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    
    "prettier.documentSelectors": ["**/*.html"],
    "emmet.includeLanguages": {
        "django-html": "html"
    }
}